{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1"
  },
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(cd:*)",
      "Bash(chmod:*)",
      "Bash(claude:*)",
      "Bash(climpt:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(deno:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(env:*)",
      "Bash(file:*)",
      "Bash(find:*)",
      "Bash(gh:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jq:*)",
      "Bash(kill:*)",
      "Bash(ls:*)",
      "Bash(lsof:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(pkill:*)",
      "Bash(ps:*)",
      "Bash(pwd:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(sleep:*)",
      "Bash(tail:*)",
      "Bash(timeout:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(which:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-env .claude/hooks/validate-dangerous-commands.ts",
            "timeout": 5,
            "statusMessage": "危険コマンドを検証中..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "deno fmt",
            "timeout": 30,
            "statusMessage": "フォーマット中..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "deno run --allow-read --allow-run --allow-env --allow-net jsr:@aidevtool/ci --allow-dirty >&2 && echo '{}' || echo '{\"decision\": \"block\", \"reason\": \"CI failed\"}'",
            "timeout": 120,
            "statusMessage": "CI"
          }
        ]
      }
    ]
  },
  "sandbox": {
    "network": {
      "allowedHosts": [
        "jsr.io",
        "*.jsr.io",
        "deno.land",
        "*.deno.land",
        "github.com",
        "api.github.com"
      ]
    }
  },
  "enabledPlugins": {
    "climpt-agent@climpt-marketplace": true,
    "plugin-dev@claude-plugins-official": true
  },
  "extraKnownMarketplaces": {
    "senlygan-plugins": {
      "source": {
        "source": "directory",
        "path": "./plugins"
      }
    }
  }
}

{
  "name": "@aidevtool/climpt",
  "version": "1.12.5",
  "description": "A CLI wrapper around @tettuan/breakdown for AI-assisted development instruction tools. Provides unified interface for creating, managing, and executing development instructions using TypeScript and JSON Schema for AI system interpretation.",
  "license": "MIT",
  "author": "tettuan",
  "homepage": "https://github.com/tettuan/climpt",
  "repository": {
    "type": "git",
    "url": "https://github.com/tettuan/climpt.git"
  },
  "keywords": [
    "cli",
    "prompt",
    "ai",
    "tool"
  ],
  "exports": {
    ".": "./mod.ts",
    "./cli": "./cli.ts",
    "./mcp": "./mcp.ts",
    "./reg": "./reg.ts",
    "./docs": "./docs.ts",
    "./docs/cli": "./src/docs/cli.ts",
    "./agents": "./agents/mod.ts",
    "./agents/runner": "./agents/scripts/run-agent.ts"
  },
  "include": [
    "README.md",
    "LICENSE",
    "mod.ts",
    "cli.ts",
    "mcp.ts",
    "reg.ts",
    "docs.ts",
    "src/",
    "docs/",
    ".agent/",
    "agents/"
  ],
  "exclude": [
    "node_modules",
    ".git",
    ".github/",
    ".vscode/",
    ".claude/",
    ".gitignore",
    "CLAUDE.md",
    "deno.lock",
    "tmp/"
  ],
  "publish": {
    "exclude": [
      ".claude/",
      "plugins/",
      "tests/",
      "examples/",
      "scripts/"
    ]
  },
  "test": {},
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net --allow-env --watch cli.ts",
    "build": "deno compile --allow-read --allow-write --allow-net --allow-env --output ./dist/climpt cli.ts",
    "fmt:check": "deno fmt --check",
    "lint": "deno lint",
    "check": "deno check agents/**/*.ts src/**/*.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net tests/",
    "test:common": "deno test --allow-all agents/common/",
    "test:all": "deno test --allow-read --allow-write --allow-env --allow-net tests/ && deno test --allow-all agents/common/",
    "ci": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run jsr:@aidevtool/ci",
    "generate-registry": "deno run --allow-read --allow-write --allow-env scripts/generate-registry.ts",
    "agent": "deno run --allow-all agents/scripts/run-agent.ts",
    "iterate-agent": "deno run --allow-all agents/scripts/run-agent.ts --agent iterator",
    "review-agent": "deno run --allow-all agents/scripts/run-agent.ts --agent reviewer",
    "facilitate-agent": "deno run --allow-all agents/scripts/run-agent.ts --agent facilitator",
    "bump-version": "deno run --allow-read --allow-write --allow-run scripts/bump-version.ts",
    "generate-docs-manifest": "deno run --allow-read --allow-write scripts/generate-docs-manifest.ts",
    "verify-docs": "deno run --allow-read --allow-run .claude/skills/docs-consistency/scripts/verify-docs.ts"
  },
  "imports": {
    "@aidevtool/frontmatter-to-schema": "jsr:@aidevtool/frontmatter-to-schema@^1.7.3",
    "@anthropic-ai/claude-agent-sdk": "npm:@anthropic-ai/claude-agent-sdk@~0.2.47",
    "@anthropic-ai/claude-code": "npm:@anthropic-ai/claude-code@^2.1.47",
    "@modelcontextprotocol/sdk/server": "npm:@modelcontextprotocol/sdk@1.27.0/server/index.js",
    "@modelcontextprotocol/sdk/server/stdio": "npm:@modelcontextprotocol/sdk@1.27.0/server/stdio.js",
    "@modelcontextprotocol/sdk/types": "npm:@modelcontextprotocol/sdk@1.27.0/types.js",
    "@std/assert": "jsr:@std/assert@^1",
    "@std/cli": "jsr:@std/cli@^1.0.27",
    "@std/flags": "jsr:@std/flags@^0.224.0",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4",
    "@tettuan/breakdownlogger": "jsr:@tettuan/breakdownlogger@^1.1.3"
  },
  "compilerOptions": {
    "lib": ["deno.ns", "dom", "es2022"],
    "strict": true,
    "skipLibCheck": true
  },
  "fmt": {
    "include": [
      "src/",
      "agents/",
      "docs/",
      "scripts/",
      "plugins/",
      "examples/",
      "tests/",
      "*.ts",
      "*.json"
    ],
    "exclude": ["dist/", "node_modules/", "tmp/"]
  },
  "lint": {
    "include": [
      "src/",
      "agents/",
      "docs/",
      "scripts/",
      "plugins/",
      "examples/",
      "*.ts"
    ],
    "exclude": ["dist/", "node_modules/", "tmp/", "**/*_test.ts", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "guard-for-in",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-console",
        "no-const-assign",
        "no-eval",
        "no-implicit-declare-namespace-export",
        "no-inferrable-types",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-slow-types",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-throw-literal",
        "no-undef",
        "no-useless-rename",
        "prefer-ascii",
        "single-var-declarator",
        "triple-slash-reference",
        "verbatim-module-syntax"
      ]
    }
  }
}
